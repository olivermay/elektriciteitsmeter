	<modelVersion>4.0.0</modelVersion>
	<groupId>be.olivermay</groupId>
	<artifactId>elektriciteitsmeter</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>war</packaging>

	<dependencyManagement>
